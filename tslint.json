{
  "extends": [
    "tslint-config-airbnb",
    "tslint-react-hooks"
  ],
  // todo: tslint-react도 추후 적용하기
  "rules": {
    "react-hooks-nesting": "error",
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "max-line-length": {
      "options": [
        140
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "strict-type-predicates": false,
    // todo: 추후 strictNullChecks 활성화 시키고 적용하기.
    // "no-boolean-literal-compare": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "import-name": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "semicolon": [
      true,
      "never"
    ],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "variable-name": [
      true,
      //      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}